@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <!-- Page Title -->
    <h1 class="display-4 text-light">Welcome</h1>

    <!-- Welcome Graphic Section -->
    <div class="mt-4">
        <img src="https://i.ytimg.com/vi/J1aOXKVnKqU/maxresdefault.jpg"
             class="img-fluid rounded shadow-lg animate__animated animate__fadeIn"
             style="max-width: 50%; height: 50%;">

        <h3 class="mt-3 text-info">Explore trending music videos and find your favorites!</h3>
    </div>

    <!-- Carousel Section -->
    <div id="carouselExample" class="carousel slide mt-5" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://i.ytimg.com/vi/AAq06bS8UZM/maxresdefault.jpg" class="d-block w-100 carousel-img" alt="First Slide">
            </div>
            <div class="carousel-item">
                <img src="https://i.ytimg.com/vi/kPa7bsKwL-c/maxresdefault.jpg" class="d-block w-100 carousel-img" alt="Second Slide">
            </div>
            <div class="carousel-item">
                <img src="https://i.ytimg.com/vi/BAkqJT_sMKQ/maxresdefault.jpg" class="d-block w-100 carousel-img" alt="Third Slide">
            </div>
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Custom CSS -->
<style>
    .carousel-img {
        max-height: 400px; /* boleh adjust size gambar */
        object-fit: cover;
    }
</style>
